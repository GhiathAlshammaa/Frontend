{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "baseUrl": "projects",
    "paths": {
      // "ui-custom-elements": [
      //   "dist/ui-custom-elements/ui-custom-elements",
      //   "dist/ui-custom-elements"
      // ],
      "@preview/*": ["preview-ui-custom-elements/src/*"],
      "@preview-app/*": ["preview-ui-custom-elements/src/app/*"],
      "@preview-env/*": ["preview-ui-custom-elements/src/environments/*"],
      "@ui/*": ["ui-custom-elements/src/*"],
      "@projects/*": ["*"]
    },
    "resolveJsonModule": true, // import json files in the application, we need this to work with dictionaries
    "esModuleInterop": true
  }
}
