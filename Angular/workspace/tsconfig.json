{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "baseUrl": "./",
    "paths": {
      "ui-custom-elements": [
        "dist/ui-custom-elements/ui-custom-elements",
        "dist/ui-custom-elements"
      ],
      "@dist/*": ["dist/ui-custom-elements/src/public-api"],
      "@preview/*": ["projects/preview-ui-custom-elements/src/*"],
      "@preview-app/*": ["projects/preview-ui-custom-elements/src/app/*"],
      "@preview-env/*": ["projects/preview-ui-custom-elements/src/environments/*"],
      "@ui/*": ["ui-custom-elements/src/*"],
      "@projects/*": ["*"],
      "gui": ["dist/gui/gui", "dist/gui"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
  }
}
